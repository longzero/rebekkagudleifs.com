site-width = 910px

*
  box-sizing: border-box

html
  scroll-behavior: smooth

body
  --color-accent: #6c7347;
  --color-copy: #000;
  --color-site-background: #fff;
  background: var(--color-site-background);
  color: var(--color-copy);
  font-family: Verdana, Geneva, sans-serif;
  font-size: .95em;
  margin: 0;

a
  color inherit
  transition-duration: .3s
  &:hover
    color var(--color-accent)
    text-decoration: none

img
  max-width: 100%

.container
  margin-left auto
  margin-right auto
  padding-left 20px;
  padding-right 20px
  max-width site-width
  width: 100%

.article-container
  margin-bottom 100px
  min-height: 50vh

.article-list
  .show-article &
    display: none

.article-link
  display: block
  padding-bottom 1em

.article-wrapper
  display: none
  .show-article &
    display: block

.site-footer
  font-size .8em

.site-header
  margin-bottom 50px
  padding-top 20px

.site-name
  font-family: Arial, Helvetica, sans-serif;
  font-size 2em
  font-weight: normal;
  margin: 0 0 5px;
  padding: 1em 0 0;
  padding-top: 14px;
  text-decoration: none
