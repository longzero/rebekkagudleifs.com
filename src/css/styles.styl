site-width = 910px

*
  box-sizing: border-box

body
  background: #000;
  color: #ccc;
  font-family: Verdana, Geneva, sans-serif;
  font-size: .95em;
  margin: 0;

a
  color #fff
  cursor: pointer

h2
  color: #6c7347;
  font-size: 1.4em;
  font-weight: normal;
  margin-top: 14px;
  margin-bottom: 4px;
  padding: 0;

.container
  margin-left auto
  margin-right auto
  max-width site-width
  width: 100%

.navigation-dropdown-item
  border-bottom 1px solid #222
.navigation-dropdown-link
  color #aaa
  display: block
  padding 5px 10px
  transition-duration: .3s
  &:hover
    background-color #444
    color #fff
.navigation-dropdown-link
  white-space: nowrap
.navigation-dropdown-list
.site-navigation-list
  display: flex
  list-style: none
  margin 0
  padding-left 0

.navigation-dropdown-list
  background-color #000
  display: none

.site-body
  display: flex

.site-content
  background: #222;
  flex-grow 1
  font-size: .9em;
  line-height: 1.24;
  padding: 5px 20px;
  width: 215px;
  height: 450px;
  overflow: auto;

.site-footer
  clear: both;
  color: #555;
  font-size: .7em;
  margin: 10px auto;
  margin-bottom: 4px;
  padding-bottom: 24px;
  a
    color: #aaa

.site-header
  display: flex
  align-items: flex-end
  flex-wrap wrap
  justify-content: space-between
  margin-bottom: 10px;

.site-name
  font-family: Arial, Helvetica, sans-serif;
  font-size 2em
  font-weight: normal;
  margin: 0 0 5px;
  padding: 1em 0 0;
  padding-top: 14px;

.site-navigation
  font-size: .9em
  a
    text-decoration: none
.site-navigation-item
  margin-right 10px
  position relative
  &:hover
    .navigation-dropdown-list
      display: block
      position: absolute;
      top 100%
      left 0
  &:last-child
    margin-right 0
.site-navigation-link
  color #aaa
  &:hover
    color #fff
