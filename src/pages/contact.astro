---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import contactImg from '../assets/photos/contact.jpg';

const section = "contact";
---

<Layout title="contact" section={section}>
  <div id="container">
    <div id="photo">
      <Image src={contactImg} width={675} alt="Contact Rebekka" />
    </div>
    <div id="content">
      <h2><span style="color:#fff;">contact</span>rebekka</h2>
      <form action="#" method="post">
        <p>
          name <input class="field" type="text" name="name" /><br />
          email <input class="field" type="text" name="email" /><br />
          website <input class="field" type="text" name="website" value="http://" /><br />
          location <input class="field" type="text" name="location" /><br />
          subject <input class="field" type="text" name="subject" /><br />
          message
          <textarea rows="6" cols="25" name="message"></textarea><br />
          <input type="checkbox" name="check2" /> Please check this before sending.<br />
          <input type="submit" name="subSend" value="Send" style="margin-top: 10px;" />
        </p>
      </form>
      <p style="font-size: 80%; color: #888; margin-top: 20px;">
        Note: The contact form is for demonstration. To make it functional on Vercel, we can connect it to a form service.
      </p>
    </div>
  </div>
</Layout>
